---
let mensaje = Astro.url.searchParams.get('msg')
import Layout from '../layouts/Layout.astro'
---
<Layout>
<html lang="es">
  <head>
    <title>Login | Mujer Arquetipo</title>
  </head>
  <body class="flex justify-center items-center min-h-screen bg-pink-100">
    <form action="/api/login" method="POST" class="bg-white p-6 rounded shadow-md w-full max-w-sm">
      <h1 class="text-2xl font-bold mb-4 text-pink-700">Iniciar sesión</h1>
      <input
        type="email"
        name="email"
        placeholder="Tu correo"
        required
        class="w-full p-2 border rounded mb-4"
      />
      <button
        type="submit"
        class="w-full bg-pink-600 hover:bg-pink-700 text-white py-2 rounded"
      >
        Enviar enlace mágico
      </button>
      {mensaje && <p class="mt-4 text-sm text-gray-700">{mensaje}</p>}
    </form>
  </body>
</html>
</Layout>